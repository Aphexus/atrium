T degtorad(T) (T angle)
{
    return (angle / 180.0) * PI;
}

T radtodeg(T) (T angle)
{
    return (angle / PI) * 180.0;
}

T max3(T) (T x, T y, T z)
{
    T temp = (x > y)? x : y;
    return (temp > z) ? temp : z;
}

T min3(T) (T x, T y, T z)
{
    T temp = (x < y)? x : y;
    return (temp < z) ? temp : z;
}

T clamp(T) (T v, T minimal, T maximal)
{
    if (v > minimal)
    {
        if (v < maximal) return v;
            else return maximal;
    }
    else return minimal;
}
