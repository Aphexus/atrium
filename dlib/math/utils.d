bool isConsiderZero(T) (T f)
{
    enum ZERO = 1.0e-6;
    return (abs(f) < ZERO);
}

T nextPowerOfTwo(T) (T k) 
{
    if (k == 0) 
        return 1;
    k--;
    for (int i = 1; i < T.sizeof * char.sizeof; i <<= 1) 
        k = k | k >> i;
    return k + 1;
}

T nextPowerOfTen(T) (T k)
{
    return pow(10, cast(int)ceil(log10(k)));
}

T sum(T) (T[] array...)
{
    T result = 0;
    foreach(v; array) 
        result += v;
    return result;
}

T[] invertArray(T) (T[] array...)
{
    auto result = new T[array.length];
    foreach(i, v; array) 
        result[i] = -v;
    return result;
}

bool allIsZero(T) (T[] array...)
{
    foreach(i, v; array) 
        if (v != 0) return false;
    return true;
}

bool oneOfIsZero(T) (T[] array...)
{
    foreach(i, v; array) 
        if (v == 0) return true;
    return false;
}

version (BigEndian)
{
    uint bigEndian(uint value)
    {
        return value;
    }
}

version (LittleEndian) 
{
    uint bigEndian(uint value) 
    {
        return value << 24
            | (value & 0x0000FF00) << 8
            | (value & 0x00FF0000) >> 8
            |  value >> 24;
    }
}

uint bytesToUint(ubyte[4] src)
{
    return (src[0] << 24 | src[1] << 16 | src[2] << 8 | src[3]); 
}

T fovYfromX(T) (T xfov, T aspect)
{
    xfov = degtorad(xfov);
    T yfov = 2.0 * atan(tan(xfov * 0.5)/aspect);
    return radtodeg(yfov);
}

T fovXfromY(T) (T yfov, T aspect) 
{
    yfov = degtorad(yfov);
    T xfov = 2.0 * atan(tan(yfov * 0.5) * aspect);
    return radtodeg(xfov);
}



